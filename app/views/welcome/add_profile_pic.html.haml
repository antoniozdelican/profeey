      %h1 Paperclip


      = simple_form_for @user, url: update_user_profile_pic_path, html: { class: 'cropit2-form' } do |f|
        .image-editor
          / %input.cropit-image-input{:type => "file"}
          = f.input :profile_pic, as: :file, input_html: { class: 'cropit-image-input cropit2-input' }

          = f.input :crop_x, input_html: { id: 'cropX' }
          = f.input :crop_y, input_html: { id: 'cropY' }
          = f.input :crop_ratio, input_html: { id: 'cropRatio' }
          = f.input :crop_w, input_html: { id: 'cropW', value: '300' }
          = f.input :crop_h, input_html: { id: 'cropY', value: '300' }
          .cropit-image-preview
          .image-size-label
            Resize image
          %input.cropit-image-zoom-input{:type => "range"}
          %input.hidden-image-data{:name => "image-data"}
          / %button{:type => "submit"} Submit
          = f.button :submit
      #result-data
